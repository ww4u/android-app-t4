<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_dark"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/back"
        android:background="@drawable/btn_returnbg"
        android:src="@drawable/icon_return"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_toolbar_selector"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/back"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="当前状态："/>


        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/link_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_status"
            android:drawableLeft="@drawable/icon_shebei02"
            android:drawableRight="@drawable/icon_about"
            android:drawablePadding="5dp"
            android:text="正常"/>

        <TextView
            android:id="@+id/net_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_status"
            android:drawableLeft="@drawable/icon_lianjie02"
            android:drawableRight="@drawable/icon_about"
            android:drawablePadding="5dp"
            android:text="正常"/>


    </LinearLayout>

    <TextView
        android:id="@+id/postion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前坐标位置："
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/open_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/leftControlView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/control_open_selector"
         />

    <TextView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/leftControlView"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/control_close_selector"
         />

    <TextView
        android:id="@+id/up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/leftControlView"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/control_up_selector"
         />

    <TextView
        android:id="@+id/down_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/leftControlView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/control_down_selector"
         />

    <TextView
        android:layout_toLeftOf="@id/set"
        android:layout_marginRight="5dp"
        android:id="@+id/restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ico_restore"
        android:background="@drawable/control_toolbar_selector"
        android:drawablePadding="5dp"
        android:text="回零"/>

    <TextView
        android:id="@+id/set"
        android:layout_toLeftOf="@id/mark"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ico_setting"
        android:background="@drawable/control_toolbar_selector"
        android:drawablePadding="5dp"
        android:text="设置" />

    <TextView
        android:id="@+id/mark"
        android:layout_toLeftOf="@id/stop"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ico_mark"
        android:background="@drawable/control_toolbar_selector"
        android:drawablePadding="5dp"
        android:text="记录该点"/>

    <TextView
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/emergency_stop_selector"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ico_stop"
        android:drawablePadding="5dp"
        android:text="紧急停止"/>


    <com.megarobo.control.view.DiscView
        android:id="@+id/leftControlView"
        android:layout_toRightOf="@id/open_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        />

    <com.megarobo.control.view.RightControl
        android:id="@+id/rightControlView"
        android:layout_alignTop="@id/leftControlView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/up_btn"
        />


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_toolbar_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="当前坐标位置："/>


        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            android:text="210,332,096"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="手腕角度："/>

        <TextView
            android:id="@+id/angle"
            android:layout_width="wrap_content"
            android:ems="3"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            android:text="0°"/>


    </LinearLayout>


    <ViewStub
        android:id="@+id/set_view_stub"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <ViewStub
        android:id="@+id/mark_view_stub"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</RelativeLayout>
