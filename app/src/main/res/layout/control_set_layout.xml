<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ico_close"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置移动速度："
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/title"
            android:layout_centerInParent="true"/>
        <EditText
            android:id="@+id/speed"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/btn_cancel_nor"
            android:text="50%"
            android:textColor="@color/white"
            android:clickable="true"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_below="@id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"

        android:layout_toLeftOf="@id/step"
        android:text="设置移动步距：" />
        <EditText
            android:id="@+id/step"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="50%"
            android:textColor="@color/white"
            android:inputType="number|numberDecimal"
            android:background="@drawable/btn_cancel_nor"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@id/layout2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/joint_step"
        android:textColor="@color/white"
        android:text="设置手抓开合步距：" />
        <EditText
            android:id="@+id/joint_step"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="50%"
            android:textColor="@color/white"
            android:inputType="number|numberDecimal"
            android:background="@drawable/btn_cancel_nor"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/control_cancel_selector"
            />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/control_confirm_selector"
            android:layout_alignParentBottom="true"
            android:text="确定"/>
    </LinearLayout>

</RelativeLayout>
