<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_dark"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/back"
        android:src="@drawable/ico_return_selector"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:drawablePadding="5dp"
        android:textSize="18sp"
        android:text="我的编程"/>

    <LinearLayout
        android:id="@+id/program_layout"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:id="@+id/program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的编程"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/last_modify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="(最近更新时间：2019年6月28日）"
            android:textColor="@color/program_hint"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/continue_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/control_confirm_selector"
            android:layout_alignParentBottom="true"
            android:text="继续编程"/>
    </LinearLayout>


</RelativeLayout>
