<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_dark"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/back"
        android:src="@drawable/ico_return_selector"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:drawablePadding="5dp"
        android:textSize="18sp"
        android:text="当前连接设备：AQ_1234567"/>

    <RelativeLayout
        android:layout_below="@id/equipment_name"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_gray"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="140dp"
        android:layout_above="@id/btnLayout"
        android:layout_marginBottom="40dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/line2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/line3"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/line4"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_shebei02"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:text="当前设备状态："/>


            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/link_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_status"
                android:drawablePadding="5dp"
                android:text="正常"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/line_color_1"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_lianjie02"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:text="当前连接状态："/>

            <TextView
                android:id="@+id/net_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_status"
                android:drawablePadding="5dp"
                android:text="正常"/>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:id="@+id/switchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换设备"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/remoteControlBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="遥控设备"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />
        <TextView
            android:id="@+id/voiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音控制"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voiceLayout"
        android:layout_below="@+id/btnLayout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音控制"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />

        <TextView
            android:visibility="invisible"
            android:id="@+id/programBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="自定义编程"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/programLayout"
        android:layout_below="@+id/btnLayout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:id="@+id/simpleProgramBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简单搬运编程"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />

        <TextView
            android:id="@+id/customProgramBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="自定义编程"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/myProgramLayout"
        android:layout_below="@+id/programLayout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:id="@+id/myProgramBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的编程"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />

        <TextView
            android:id="@+id/otherBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的编程"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            android:visibility="invisible"
            />

    </LinearLayout>
</RelativeLayout>
