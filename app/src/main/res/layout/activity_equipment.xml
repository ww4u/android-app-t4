<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_dark"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/back"
        android:src="@drawable/ico_return"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:drawablePadding="5dp"
        android:textSize="18sp"
        android:text="当前连接设备：AQ_1234567"/>

    <LinearLayout
        android:layout_below="@id/equipment_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_toolbar_selector"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="当前状态："/>


        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/link_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_status"
            android:drawableLeft="@drawable/icon_shebei02"
            android:drawableRight="@drawable/icon_about"
            android:drawablePadding="5dp"
            android:text="正常"/>

        <TextView
            android:id="@+id/net_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_status"
            android:drawableLeft="@drawable/icon_lianjie02"
            android:drawableRight="@drawable/icon_about"
            android:drawablePadding="5dp"
            android:text="正常"/>


    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:id="@+id/switchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换设备"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />

        <TextView
            android:id="@+id/remoteControlBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="遥控设备"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/control_cancel_selector"
            />
    </LinearLayout>
</RelativeLayout>
